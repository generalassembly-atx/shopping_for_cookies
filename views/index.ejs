<!DOCTYPE html>
<html>
  <head>
    <title>Shopping Cart</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Shopping for Cookies</h1>


    <strong>Items in cart: <!-- Print the number of items in the cart here --></strong>
    <ul>
      <!-- List the names of the items in your cart here -->
        <% cart.forEach(function(product){ %>
               <li><%= product.name %></li>
        <% }) %>
      <!-- If you're adventurous, try adding a delete form/button for each item to remove it from the cart! -->
        <!-- Note: if you try the delete form, you'll probably need a line like this inside your form: -->
        <!-- <input type="hidden" name="_method" value="delete"> -->
        <!-- And you'll want to make the form for deleting a "post" request -->
    </ul>

    <ul>
      <% products.forEach(function(product) { %>
        <li class="product">
          <form action="/cart" method="post">
            <h5><%= product.name %></h5>
            <img src="<%= product.image %>" class="cookie-pic" />
            <p><%= product.description %></p>
            <input type="hidden" name="id" value="<%= product.id %>">
            <input type="submit" value="Add to Cart" class="add-to-cart noselect">
          </form>
        </li>
      <% }); %>
    </ul>
  </body>
</html>
